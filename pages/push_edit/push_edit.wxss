/* pages/push_edit/push_edit.wxss */


.chain-dialog {
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 3%;
  margin-bottom: 2%;
  background-color: #ffffff;
  
  border-radius: 15rpx;
  box-shadow: 3px 3px 20px #d0d0d0, -3px -3px 20px #d0d0d0;
}



.flex_row {
  display: flex;
  flex-direction: row;
  position: relative;
}

.img {
  top: 0px;
  bottom: 0px;
  margin: 15px;
  width: 75px;
  height: 75px;
}


.title_text {
  position: absolute;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 10px;
  font-size: 16px;
}


.owner {
  margin-right: 10px;
  margin-top: 10px;
  font-size: 14px;
  background-color: #ffffff;
  text-align: center;
  border-radius: 15rpx;
  color: #6699ff;
  border: 2px solid #6699ff;
}


.text {
  overflow:hidden;  
  white-space:nowrap;
  font-size: 16px;
}

.flex_column{
  display:flex;       
  flex-direction: column;             
  justify-content: center;       
 }

.text_about{
  width: 70%;
  overflow:hidden;
  text-overflow:ellipsis;        
  white-space:nowrap;
  font-size: 16px;
}


.line{
  width: 100%;
  height: 1px;
  border-top: 2rpx solid #D5D5D6;
  color: #D5D5D6;
 }

 .text_text{
   font-size: 12px;
 }