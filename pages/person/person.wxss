/* pages/person/person.wxss */ 
.title_bar { 
  background: #6699ff; 
  align-items: center; 
} 
 
.title { 
  color: white; 
  font-size: 20px; 
} 
 
 .username{
   margin-bottom: 5%;
 }
 
.container { 
  width: 100%; 
  display: flex; 
  flex-direction: row; 
  padding: 12% 0; 
  box-sizing: border-box; 
  align-items: center; 
} 
 
 
 
 
 
.left_image { 
  margin: 15px; 
  position: absolute; 
  width: 75px; 
  height: 75px; 
  top: 0px; 
  bottom: 0px; 
} 
 
 
.title_icon { 
  position: absolute; 
  display: flex; 
  flex-direction: row; 
  justify-content: flex-end; 
  align-items: center; 
  width: 100%; 
} 
 
 
.text { 
  position: absolute; 
  color: white; 
  font-size: 20px; 
} 
 
.phone_text { 
  margin-top: 5%; 
  position: absolute; 
  color: white; 
  font-size: 14px; 
} 
 
.flex_column_self { 
  margin-left: 25%; 
  display: flex; 
  flex-direction: column; 
  justify-content: center; 
} 
 
.img { 
  top: 0px; 
  bottom: 0px; 
  margin: 15px; 
  width: 30px; 
  height: 30px; 
} 
 
 
.flex_row_self{ 
  display: flex; 
  flex-direction: row; 
} 
 
.box { 
  border: 1rpx gainsboro solid; 
}
