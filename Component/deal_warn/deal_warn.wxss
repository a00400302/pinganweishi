/* Component/add_dialog/add_dialog.wxss */
.chain-mask{
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.chain-dialog {
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #ffffff;
  border-radius: 6rpx;
  overflow: hidden;
}

.chain-dialog-title {
  padding: 1.3em 1.6em 0.5em;
  font-weight: 400;
  font-size: 36rpx;
}





