.flex_row {
  display: flex;
  flex-direction: row;
}

.img {
  top: 0px;
  bottom: 0px;
  margin: 35px;
  width: 25px;
  height: 25px;
}


.title_text {
  position: absolute;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 10px;
  font-size: 18px;
}


.owner {
  margin-right: 10px;
  margin-top: 10px;
  font-size: 14px;
  background-color: #ffffff;
  text-align: center;
  border-radius: 15rpx;
  color: #6699ff;
  border: 2px solid #6699ff;
}


.text {
  overflow:hidden;  
  white-space:nowrap;
  font-size: 13px;
}

.flex_column{
  display:flex;       
  flex-direction: column;             
  justify-content: center;       
 }

.text_about{
  overflow:hidden;
  text-overflow:ellipsis;        
  white-space:nowrap;
  font-size: 13px;
}


.line{
  margin-top: 5px;
  width: 100%;
  height: 1px;
  border-top: 2rpx solid #D5D5D6;
  color: #D5D5D6;
 }

 .title_view{
   margin-bottom: 3%;
 }


 .image_layout{
  text-align: right;
  position: absolute;
  width: 100%;
 }