/* Component/add_camera.wxss */
.image{
  height: 100px;
  display: unset;
}

.image_online{
  margin-right: 5%;
  width: 50px;
  height: 50px;
}

.image_status{
  width: 50px;
  height: 50px;
  position: absolute;
}

.image_online_layout{
  display:flex;
  flex-direction: row;             
  justify-content: flex-end; 
  margin-top: 2%;
  margin-right: 2%;
  position: absolute;
  width: 45%;
  height: 100px;
}


.image_status_layout{
  margin-left: 2%;
  margin-top: 8%;
  display:flex;       
  flex-direction: row;             
  justify-content: center; 
  /* text-align: center; */
  position: absolute;
  width: 45%;
  height: 100px;
}

.image_layout{
  margin: 2%;
  width: 45%;
  height: 100px;
}



.border{
  font-size: 15px;
  display:flex;       
  flex-direction: row;    
  width: 96%;
  margin: 2%;
  border-radius: 15rpx;
  box-shadow: 0 0  1px 1px gainsboro;

}
.flex_row{
  font-size: 15px;
  display:flex;       
  flex-direction: row;              
 }

 .flex_column{
  display:flex;       
  flex-direction: column;             
  justify-content: center;       
 }

 .flex_column_self{
  display:flex;       
  flex-direction: column;             
 }